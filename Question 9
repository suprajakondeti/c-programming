#include <stdio.h>

void main() {

    int number, reversedNumber = 0, remainder;

    printf("Enter a number: ");

    scanf("%d", &number);



    for(; number != 0; number /= 10) {

        remainder = number % 10;

        reversedNumber = reversedNumber * 10 + remainder;

    }

    printf("Reverse of %d = %d\n", number, reversedNumber);

    getch();

}
